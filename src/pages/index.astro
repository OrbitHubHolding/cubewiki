---
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/cards/Standard.astro";
const pageTitle = "home";
---

<!-- <script type="module" src="https://unpkg.com/@fluentui/web-components">
</script> -->

<style>
	h3 {
		margin: 0;
		color: #202020;
	}

	.warning {
		border-radius: 0.5rem;
		background-color: #f1ad8a;
		padding: 0.5rem;
		margin-top: 2rem;

		display: flex;
		justify-content: center;
	}

	.mainColumns {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		grid-template-rows: masonry;
		column-gap: 0.5rem;
		row-gap: 0.5rem;
	}

	.mainColumns > * {
		word-wrap: break-word;
	}

	img {
		max-width: 100%;
		object-fit: contain;
	}

</style>

<BaseLayout pageTitle={pageTitle}>
	<div class="warning">
		<h3>this site is still a massive WIP, so yeah. you can mess around but there isnt a lot to look at yet</h3>
	</div>

	<h1>fish(e) fan club</h1>
	
	<div class="mainColumns">
		<Card title="a fish">
			<img src="lefish.png" />
		</Card>
		<Card title="a fishe">
			<img src="fishe.png" />
		</Card>
		<Card title="">
			<p>arent they beautiful</p>
		</Card>
		<Card title="fish jumpscare">
			<audio controls loop autoplay muted>
				<source src="fish.ogg" type="audio/ogg" />
				test
			</audio>
		</Card>
		<Card title="AAA WHO IS THIS GUY">
			<img src="HE HAS BEEN SUMMONED.png" />
		</Card>
		<Card title="i woulge">
			<img src="woulge.png" />
		</Card>
		<Card title="man">
			<img src="spongebob-fish.gif" />
		</Card>
	</div>
	
</BaseLayout>